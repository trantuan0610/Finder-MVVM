<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="finder.ui.splash.SplashFragment"
    android:background="@color/pink1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/heat"
           />

        <TextView
            android:layout_marginTop="68dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finder"
            android:textSize="30sp"
            android:fontFamily="@font/bold"
            android:textColor="#F24E1E"
            android:layout_gravity="center"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="Love can come on its own but it will be faster if you actively seek it!"
        android:fontFamily="@font/regular"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textColor="#F24E1E"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:theme="@style/ProgressBar"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/regular"
        />








</FrameLayout>
</layout>